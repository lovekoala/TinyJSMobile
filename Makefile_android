CFLAGS = -wall -g
SRC = jsm.cpp \
      TinyJS/TinyJS.cpp \
      native/String/String.cpp \
      native/Array/Array.cpp
OBJ = $(SRC: .cpp = .o)
EXE = jsm
# should generate the standalone ndk toolchain by : $NDK/build/tools/make-standalone-toolchain.sh --platform=android-8 --install-dir="your standalone ndk location"
# should set the TOOLCHAIN_PATH param to YOUR STANDALONE NDK LOCATION generated by make-standalone-toolchain.sh
# DONOT FORGET to add the TOOLCHAIN_PATH/bin to the PATH environment
CC = arm-linux-androideabi-gcc
CXX = arm-linux-androideabi-g++ 
CXXFLAGS = -fexceptions -frtti
LDCXXFLAGS = -lstdc++ -lsupc++
all: $(SRC) $(EXE)

$(EXE): $(OBJ)
	$(CC) -o $@ $^ $(LDCXXFLAGS)

$.o: %.cpp
	$(CC) -o $@ -c $< $(CXXFLAGS) 

